#!/bin/sh

action="$(printf "Lock Screen\nHibernate\nPower Off\nReboot\n" | sigma-dmenu -p "Choose an action...")"

case "$action" in
	"Lock Screen") sigma-lock-screen;;
	"Hibernate") foot -a wmfloat doas zzz;;
	"Power Off") foot -a wmfloat doas poweroff;;
	"Reboot") foot -a wmfloat doas reboot;;
esac
